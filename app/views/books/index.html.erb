<div class="text-success">
  <%= flash[:notice] %>
</div>

<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-3">
      <%= render 'layouts/side_bar', book: @book, user: current_user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
      <%= link_to '新しい順', books_path(latest: "true") %>
      |<%= link_to '古い順', books_path(old: "true") %>
      |<%= link_to '評価の高い順', books_path(star_count: "true") %>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="6"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td>
              <%= link_to user_path(book.user.id) do %>
                <%= image_tag book.user.get_profile_image(100,100) %>
                <br>
                <%= link_to book.user.name, user_path(book.user.id) %>
              <% end %>
            </td>
            <td><%= link_to book.title, book_path(book.id) %></td>
            <td><%= book.body %></td>
            <td id="favorite_buttons_<%= book.id %>">
              <%= render 'layouts/favorite_btn', book: book %>
            </td>
            <td><p>コメント数: <%= book.book_comments.count %></p></td>
            <td><div id="star_<%= book.id %>"></div></td>
            <script>
            $(document).on('turbolinks:load', function() {
              let elem = document.querySelector('#star_<%= book.id %>');
              if (elem == null) return;

              elem.innerHTML = "";
              let opt = {
                starOn: "<%= asset_path('star-on.png') %>",
                starOff: "<%= asset_path('star-off.png') %>",
                starHalf: "<%= asset_path('star-half.png') %>",
                score: "<%= book.star %>",
                readOnly: true,
              };
              raty(elem, opt);
            });
            </script>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>