<div class="text-success">
  <%= flash[:notice] %>
</div>
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/side_bar', book: @new_book, user: @user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">

        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@user.id) do %>
                <%= image_tag @user.get_profile_image(100,100) %>
                <br>
                <%= @user.name %>
              <% end %>
            </td>
            <td><%= @book.title %></td>
            <td><%= @book.body %></td>
            <% if @book.user == current_user %>
              <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book.id), method: :delete, data_confirm: "本当に消しますか？", class: "btn btn-sm btn-danger" %></td>
            <% end %>

            <td id="favorite_buttons_<%= @book.id %>">
              <%= render 'layouts/favorite_btn', book: @book %>
            </td>

            <td id="comments_count">
              <%= render 'layouts/comments_count', book: @book %>
            </td>
            <td><div id="star_<%= @book.id %>"></div></td>
            <script>
              $(document).on('turbolinks:load', function() {
                let elem = document.querySelector('#star_<%= @book.id %>');
                if (elem == null) return;

                elem.innerHTML = "";
                let opt = {
                  starOn: "<%= asset_path('star-on.png') %>",
                  starOff: "<%= asset_path('star-off.png') %>",
                  starHalf: "<%= asset_path('star-half.png') %>",
                  score: "<%= @book.star %>",
                  readOnly: true,
                };
                raty(elem, opt);
              });
            </script>
          </tr>
        </tbody>

        <tbody id="book_comment_field">
          <%= render 'layouts/book_comment_field', book: @book, book_comment: @new_comment %>
        </tbody>

      </table>
    </div>
  </div>
</div>