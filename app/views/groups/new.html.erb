<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>グループ作成</h2>

      <% if @group.errors.any? %>
        <%= @group.errors.count %>件のerrorが発生しました
        <ul>
          <% @group.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @group do |f| %>
        <div class="form-group">
          <label for="inputName">Name</label><br>
          <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前"%>
        </div>

        <div class="form-group">
          <label for="inputImage">GroupImage</label><br>
          <%= f.file_field :group_image, placeholder: "グループ画像", accept: "image/*" %>
        </div>

        <div class="form-group">
          <label for="inputIntroduction">Introduction</label><br>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"グループ紹介文" %>
        </div>
        <div class="form-group">
          <%= f.submit "作成", class:"btn btn-info" %>
        </div>

      <% end %>
    </div>
  </div>
</div>