<div class="message-container">
  <div class="message-topbar">
    <h2><%= @user.name %> さんとのチャット</h2>
  </div>
  <div class="message">
    <%= render "messages/message", messages: @messages %>
  </div>

  <div class="chat-form">
    <%= form_with model: @new_message, data: {remote: true} do |f| %>
      <%= f.text_field :message, placeholder: "メッセージを入力してください", autocomplete: "off" %>
      <%= f.hidden_field :room_id, value: @room.id %>
      <%= f.submit "送信" %>
    <% end %>
  </div>
</div>